%h2 Add New Movie

= form_tag movies_path do

  = label :movie, :title, 'Title'
  %span#title= @movies.first.original_title.capitalize
  = hidden_field :movie, 'title', :value => @movies.first.original_title.capitalize

  = label :movie, :rating, 'Rating'
  = select :movie, :rating, ['G','PG','PG-13','R','NC-17']

  = label :movie, :release_date, 'Released On'
  = date_select :movie, :release_date, :selected => Date.parse(@movies.first.release_date)

  = label :movie, :description, 'Description'
  = text_area :movie, 'description', :value => @movies.first.overview

  = submit_tag 'Add', :class => 'btn btn-primary'